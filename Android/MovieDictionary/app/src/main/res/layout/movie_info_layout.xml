<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="edu.asu.msse.snjaiswa.moviedictionary.MovieInfo"
    android:background="#361010">


    <android.support.design.widget.AppBarLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:theme="@style/AppTheme.AppBarOverlay"
        android:id="@+id/view">

    </android.support.design.widget.AppBarLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Title"
        android:id="@+id/titleLabel"
        android:textSize="15sp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textStyle="bold"
        android:textColor="#ffffff" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="The Godfather"
        android:id="@+id/titleValue"
        android:layout_alignParentTop="false"
        android:layout_centerHorizontal="true"
        android:layout_alignTop="@+id/titleLabel"
        android:textSize="15sp"
        android:textColor="#e29154" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="1972"
        android:id="@+id/yearValue"
        android:layout_marginTop="26dp"
        android:textSize="15sp"
        android:layout_below="@+id/titleValue"
        android:layout_alignLeft="@+id/titleValue"
        android:layout_alignStart="@+id/titleValue"
        android:textColor="#e29154" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Year"
        android:id="@+id/yearLabel"
        android:textSize="15sp"
        android:layout_alignTop="@+id/yearValue"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textStyle="bold"
        android:textColor="#ffffff"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Released"
        android:id="@+id/releasedLabel"
        android:layout_alignTop="@+id/releasedValue"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textSize="15sp"
        android:textStyle="bold"
        android:textColor="#ffffff"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="17th Feb 1972"
        android:id="@+id/releasedValue"
        android:layout_marginTop="30dp"
        android:textSize="15sp"
        android:layout_below="@+id/yearValue"
        android:layout_alignRight="@+id/titleValue"
        android:layout_alignEnd="@+id/titleValue"
        android:textColor="#e29154" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Genre"
        android:id="@+id/genreLabel"
        android:textSize="15sp"
        android:layout_alignTop="@+id/genreValue"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textStyle="bold"
        android:textColor="#ffffff"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Action"
        android:id="@+id/genreValue"
        android:textSize="15sp"
        android:layout_marginTop="30dp"
        android:layout_below="@+id/releasedValue"
        android:layout_alignLeft="@+id/yearValue"
        android:layout_alignStart="@+id/yearValue"
        android:textColor="#e29154" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="rated"
        android:id="@+id/ratedLabel"
        android:layout_alignTop="@+id/ratedValue"
        android:layout_alignParentLeft="true"
        android:textSize="15sp"
        android:textStyle="bold"
        android:textColor="#ffffff"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="top"
        android:id="@+id/ratedValue"
        android:textSize="15sp"
        android:layout_marginTop="26dp"
        android:layout_below="@+id/genreValue"
        android:layout_alignLeft="@+id/genreValue"
        android:layout_alignStart="@+id/genreValue"
        android:textColor="#e29154" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Runtime"
        android:id="@+id/runtimeLabel"
        android:textSize="15sp"
        android:layout_alignTop="@+id/runtimeValue"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textStyle="bold"
        android:textColor="#ffffff"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="2hrs 30min"
        android:id="@+id/runtimeValue"
        android:textSize="15sp"
        android:layout_marginTop="26dp"
        android:layout_below="@+id/ratedValue"
        android:layout_alignLeft="@+id/ratedValue"
        android:layout_alignStart="@+id/ratedValue"
        android:textColor="#e29154" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Actors"
        android:id="@+id/actorsLabel"
        android:layout_marginTop="34dp"
        android:textSize="15sp"
        android:layout_below="@+id/runtimeLabel"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textStyle="bold"
        android:textColor="#ffffff"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Michael"
        android:id="@+id/actorsValue"
        android:textSize="15sp"
        android:layout_alignTop="@+id/actorsLabel"
        android:layout_alignLeft="@+id/runtimeValue"
        android:layout_alignStart="@+id/runtimeValue"
        android:textColor="#e29154" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="Plot"
        android:id="@+id/plotLabel"
        android:textSize="15sp"
        android:layout_marginTop="43dp"
        android:layout_below="@+id/actorsLabel"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textStyle="bold"
        android:textColor="#ffffff"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="this is the plat"
        android:id="@+id/plotValue"
        android:textSize="15sp"
        android:layout_alignTop="@+id/plotLabel"
        android:layout_alignLeft="@+id/actorsValue"
        android:layout_alignStart="@+id/actorsValue"
        android:textColor="#e29154" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Delete Record"
        android:id="@+id/deleteButton"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="play movie"
        android:id="@+id/playMovieButton"
        android:textSize="10dp"
        android:layout_alignTop="@+id/yearValue"
        android:layout_alignRight="@+id/view"
        android:layout_alignEnd="@+id/view"
        android:layout_above="@+id/releasedLabel" />

</RelativeLayout>