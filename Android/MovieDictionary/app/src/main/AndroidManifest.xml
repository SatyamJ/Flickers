<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="edu.asu.msse.snjaiswa.moviedictionary">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MovieInfo"
            android:label="@string/title_activity_movie_info"></activity>
        <activity
            android:name=".AddMovieActivity"
            android:label="@string/title_activity_add_movie"></activity>
        <activity
            android:name=".MediaActivity"
            android:label="@string/title_activity_media"
            android:theme="@style/AppTheme.NoActionBar"></activity>
    </application>

</manifest>
